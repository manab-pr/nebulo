{
	"info": {
		"_postman_id": "nebulo-api-collection-auth",
		"name": "Nebulo - Distributed Storage API (With Authentication)",
		"description": "Complete API collection for testing Nebulo distributed storage system with user authentication",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/health",
					"host": ["{{base_url}}"],
					"path": ["health"]
				},
				"description": "Check if the main server is running"
			}
		},
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set('user_id', jsonData.user_id);",
									"    pm.collectionVariables.set('otp', jsonData.otp);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"phone_number\": \"1234567890\",\n    \"name\": \"John Doe\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/register",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "register"]
						},
						"description": "Register a new user with phone number"
					}
				},
				{
					"name": "Login User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set('otp', jsonData.otp);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"phone_number\": \"1234567890\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/login",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "login"]
						},
						"description": "Request OTP for existing user login"
					}
				},
				{
					"name": "Verify OTP",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set('auth_token', jsonData.token);",
									"    pm.collectionVariables.set('user_id', jsonData.user_id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"phone_number\": \"1234567890\",\n    \"otp\": \"{{otp}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/verify-otp",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "verify-otp"]
						},
						"description": "Verify OTP and get JWT token"
					}
				},
				{
					"name": "Get User Profile",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/users/profile",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "users", "profile"]
						},
						"description": "Get authenticated user's profile"
					}
				}
			]
		},
		{
			"name": "Device Management",
			"item": [
				{
					"name": "Register Device",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set('device_id', jsonData.data.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"My Laptop\",\n    \"ip_address\": \"192.168.1.100\",\n    \"type\": \"laptop\",\n    \"total_storage\": 107374182400\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/devices/register",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "devices", "register"]
						},
						"description": "Register a new device (requires authentication)"
					}
				},
				{
					"name": "Device Heartbeat",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"device_id\": \"{{device_id}}\",\n    \"available_storage\": 85899345920,\n    \"used_storage\": 21474836480\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/devices/heartbeat",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "devices", "heartbeat"]
						},
						"description": "Send heartbeat from device (requires authentication)"
					}
				},
				{
					"name": "List User Devices",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/devices",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "devices"]
						},
						"description": "Get list of user's registered devices"
					}
				},
				{
					"name": "Delete Device",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/devices/{{device_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "devices", "{{device_id}}"]
						},
						"description": "Remove user's device from the network"
					}
				}
			]
		},
		{
			"name": "File Management",
			"item": [
				{
					"name": "Store File",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set('file_id', jsonData.data.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "file",
									"type": "file",
									"src": "/path/to/your/test-file.txt"
								},
								{
									"key": "target_device",
									"value": "",
									"description": "Optional: specific device ID",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/api/v1/files/store",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "files", "store"]
						},
						"description": "Upload and store a file in user's network"
					}
				},
				{
					"name": "Get File Metadata",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/files/{{file_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "files", "{{file_id}}"]
						},
						"description": "Get metadata for user's specific file"
					}
				},
				{
					"name": "List User Files",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/files",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "files"]
						},
						"description": "Get list of user's stored files"
					}
				},
				{
					"name": "Delete File",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/files/{{file_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "files", "{{file_id}}"]
						},
						"description": "Delete user's file from the network"
					}
				}
			]
		},
		{
			"name": "Storage Analytics",
			"item": [
				{
					"name": "Get User Storage Summary",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/storage/summary",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "storage", "summary"]
						},
						"description": "Get aggregated storage summary across user's devices"
					}
				},
				{
					"name": "Get User Device Storage Info",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/storage/device/{{device_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "storage", "device", "{{device_id}}"]
						},
						"description": "Get storage information for user's specific device"
					}
				}
			]
		},
		{
			"name": "Search & Query",
			"item": [
				{
					"name": "Search User Files",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/files/search?name=test",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "files", "search"],
							"query": [
								{
									"key": "name",
									"value": "test"
								}
							]
						},
						"description": "Search for files by name in user's storage"
					}
				},
				{
					"name": "Get User File Location",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/files/location/{{file_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "files", "location", "{{file_id}}"]
						},
						"description": "Get location information for user's file"
					}
				}
			]
		},
		{
			"name": "Transfer Management",
			"item": [
				{
					"name": "Get Pending Transfers",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/transfers/pending/{{device_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "transfers", "pending", "{{device_id}}"]
						},
						"description": "Get pending transfers for user's device"
					}
				},
				{
					"name": "Complete Transfer",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"transfer_id\": \"{{transfer_id}}\",\n    \"success\": true,\n    \"error_msg\": \"\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/transfers/complete",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "transfers", "complete"]
						},
						"description": "Mark transfer as completed (requires authentication)"
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"description": "Main server URL"
		},
		{
			"key": "device_url",
			"value": "http://localhost:8081",
			"description": "Device server URL"
		},
		{
			"key": "auth_token",
			"value": "",
			"description": "JWT authentication token (populated after OTP verification)"
		},
		{
			"key": "user_id",
			"value": "",
			"description": "User ID (populated after registration/login)"
		},
		{
			"key": "otp",
			"value": "",
			"description": "OTP (populated after registration/login)"
		},
		{
			"key": "device_id",
			"value": "",
			"description": "Device ID (populated after device registration)"
		},
		{
			"key": "file_id",
			"value": "",
			"description": "File ID (populated after file upload)"
		},
		{
			"key": "transfer_id",
			"value": "",
			"description": "Transfer ID (populated after transfer creation)"
		}
	]
}